<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="350.0" prefWidth="458.0" userData="Central Heating" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CentralHeatingViewController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label text="Central Heating">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
         <children>
            <Label prefWidth="130.0" text="Indoor thermometer1:" />
            <Label fx:id="t1" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="40.0" text="546" />
            <Label fx:id="t1Warn" text="Warning!!1!" textFill="RED" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
         <children>
            <Label prefWidth="130.0" text="Indoor thermometer 2:" />
            <Label fx:id="t2" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="40.0" text="123" />
            <Label fx:id="t2Warn" text="warn" textFill="RED" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></HBox>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
         <children>
            <Label prefWidth="130.0" text="Outdoor temperature:" />
            <Label fx:id="t0" alignment="CENTER_RIGHT" prefWidth="40.0" text="4" />
            <Label fx:id="t0Warn" text="warn" textFill="RED" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></HBox>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
         <children>
            <Label prefWidth="130.0" text="Heater level:" />
            <Label fx:id="heatLvl" alignment="CENTER_RIGHT" prefWidth="28.0" text="0" />
            <VBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="51.0" spacing="10.0">
               <children>
                  <Button fx:id="up" mnemonicParsing="false" onAction="#onUp" prefWidth="50.0" text="Up" />
                  <Button fx:id="down" mnemonicParsing="false" onAction="#onDown" prefWidth="50.0" text="Down" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onHistory" text="Temperature history">
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button layoutX="330.0" layoutY="20.0" mnemonicParsing="false" onAction="#onCritical" text="Set Limit">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onLog" text="Warning log">
               <font>
                  <Font size="14.0" />
               </font></Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
